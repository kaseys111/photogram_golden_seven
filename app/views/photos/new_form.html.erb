<div class="container">

  <div class="row">

    <div class="col-md-offset-1 col-md-10">

      <h1>Add a New Photo</h1>

    </div>
  </div>

<div class="row">

  <div class="col-md-offset-1 col-md-10">

    <form action="http://localhost:3000/create">
      <div>
        <label for="caption">Caption:</label>
        <input name="caption" id="caption" type="text" placeholder="Caption">
      </div>

      <div>
        <label for="url">Image URL:</label>
        <input name="url" id="url" type="text" placeholder="URL">
      </div>

      <div>
        <button>Create Photo</button>
      </div>
    </form>

  </div>

</div>
</div>
